                points:self.pos[0]+110,self.pos[1]+self.size[1],self.pos[0]+50+110,self.pos[1]+self.size[1]+20,self.pos[0]+210,self.pos[1]+self.size[1]
            Triangle:
                points:self.pos[0]+60,self.pos[1]+self.size[1],self.pos[0]+20+60,self.pos[1]+20+self.size[1],self.pos[0]+60,self.pos[1]+self.size[1]

