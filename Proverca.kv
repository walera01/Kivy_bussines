<Game>:
# Персонаж
    Widget:
        id: person
        size: 25,25
        pos: 50,50
        background_color: 1,1,1,1
        rotate:0
        canvas:
            Color:
                rgba: 1,1,1,1
            Rotate:
                angle: self.rotate
                origin: self.center
            Rectangle:
                size: 25,25
                pos: self.pos
                source:'person.png'
            Rotate:
                angle: 360-self.rotate
                origin: self.center
# Границы поля
    Widget:
        id: pole
        canvas:
            Color:
                rgba:1,1,1,1
            Line:
                points: 0, 50,root.width, 50
            Line:
                points: 0, 525,root.width, 525


    Label:
        id: stone
        size: 50, 90
        pos: 500,50

        canvas:
            Color:
                rgba: 1,1,1,1

            Triangle:
                points:self.pos[0],self.pos[1],self.pos[0]+20,self.pos[1]+self.size[1],self.pos[0]+40,self.pos[1]

    Widget:
        id: stone2
