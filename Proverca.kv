    Widget:
        id: polka
        size: 250,25
        pos: 1500,300
        canvas:
            Rectangle:
                size:self.size
                pos:self.pos
            Color:
                rgba: 204/255, 202/255, 196/255,1

            Triangle:
                points:self.pos[0],self.pos[1]+self.size[1],self.pos[0]+20,self.pos[1]+self.size[1]+20,self.pos[0]+40,self.pos[1]+self.size[1]
            Triangle:
                points:self.pos[0]+40,self.pos[1]+self.size[1],self.pos[0]+20+40,self.pos[1]+20+self.size[1],self.pos[0]+40+40,self.pos[1]+self.size[1]
