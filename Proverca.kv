            Triangle:
                points:self.pos[0]+50,self.pos[1],self.pos[0]+20+50,self.pos[1]-20,self.pos[0]+40+50,self.pos[1]
            Triangle:
                points:self.pos[0]+100,self.pos[1],self.pos[0]+20+100,self.pos[1]-20,self.pos[0]+40+100,self.pos[1]
            Triangle:
                points:self.pos[0]+150,self.pos[1],self.pos[0]+20+150,self.pos[1]-20,self.pos[0]+40+150,self.pos[1]
    Button:
        size: root.width, root.top
        background_color: 1,1,1,0
        on_press:  root.press()

    Label:
        id: mess
        text: ""
        font_size: 50
        pos: 200,300

    Button:
        id: go
